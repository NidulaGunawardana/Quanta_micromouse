int initialization_block(void) {
	ALL_LED_ON
	;
	TIM1_START; ////////////////// CRUCIAL PART DON"T OFFFFFFFFFFFFFFFF ///////////////////////////
	TIM6_IT_START;

	motorInit();
	encoderInit();
	gyroInit();
//	displayInit();
//	buzzerInit();

	ALL_LED_OFF
	;
	HAL_Delay(1000);
	gyroCalibration();
//	disp_state = DEFAULT;
	TIM13_IT_START;
	// TIM14_IT_START;

	return 0;
}

